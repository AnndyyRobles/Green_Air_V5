---
const { stationName, region } = Astro.props;
const currentDate = new Date().toLocaleDateString('es-MX', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<header class="p-6 bg-app-card rounded-lg mb-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-white mb-2">{stationName}</h1>
      <p class="text-app-text/70">{region}</p>
    </div>
    <div class="text-right">
      <p class="text-app-text/70">{currentDate}</p>
    </div>
  </div>
</header>