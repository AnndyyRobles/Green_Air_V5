const currentYear = new Date().getFullYear();
---

<footer class="bg-app-dark py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold text-app-text mb-4">GreenAir</h3>
        <p class="text-app-text/70">
          Monitoreo de calidad del aire en tiempo real para un futuro más saludable.
        </p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold text-app-text mb-4">Enlaces rápidos</h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-app-text/70 hover:text-app-green">Inicio</a>
          </li>
          <li>
            <a href="/dashboard" class="text-app-text/70 hover:text-app-green">Dashboard</a>
          </li>
          <li>
            <a href="/profile" class="text-app-text/70 hover:text-app-green">Mi Perfil</a>
          </li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold text-app-text mb-4">Contacto</h4>
        <ul class="space-y-2">
          <li class="text-app-text/70">
            <i class="fas fa-envelope mr-2"></i> info@greenair.com
          </li>
          <li class="text-app-text/70">
            <i class="fas fa-phone mr-2"></i> +1 234 567 890
          </li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-app-card mt-8 pt-8 text-center">
      <p class="text-app-text/70">
        © {currentYear} GreenAir. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>